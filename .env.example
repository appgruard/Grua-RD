# Environment Configuration for Production

# Database
DATABASE_URL=postgresql://user:password@host:5432/gruard_db

# Node Environment
NODE_ENV=production

# Server
PORT=5000
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# JWT / Auth
JWT_SECRET=your_jwt_secret_here

# Web Push Notifications (generate with: npx web-push generate-vapid-keys)
VAPID_PRIVATE_KEY=your_vapid_private_key
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key

# Mapbox API (for maps and routing)
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Stripe Payment
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# dLocal Payment Gateway (if using instead of Stripe)
DLOCAL_X_LOGIN=your_dlocal_login
DLOCAL_X_TRANS_KEY=your_dlocal_trans_key
DLOCAL_SECRET_KEY=your_dlocal_secret_key

# SMS Service (Twilio - or via Replit Connector)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_number

# Email Service (Resend - or via Replit Connector)
RESEND_API_KEY=your_resend_api_key

# Verifik (c√©dula validation)
VERIFIK_API_KEY=your_verifik_api_key

# Replit Object Storage (if available)
REPLIT_OBJECT_STORAGE_API_URL=your_storage_url

# Google Maps (for geocoding, optional)
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
